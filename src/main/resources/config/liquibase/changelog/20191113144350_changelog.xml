<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext ../xml-schema/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog ../xml-schema/dbchangelog-3.6.xsd">
    <changeSet author="jkondrat" id="1573656239105-1">
        <createTable tableName="service_metadata">
            <column name="id" type="UUID">
                <constraints primaryKey="true" primaryKeyName="service_metadataPK"/>
            </column>
            <column name="last_action_date" type="datetime"/>
            <column name="last_action_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="srvc_id" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet author="jkondrat" id="1573656239105-2">
        <addColumn tableName="service">
            <column name="successful_referrals" type="int4"/>
        </addColumn>
    </changeSet>
    <changeSet author="jkondrat" id="1573656239105-3">
        <addColumn tableName="service">
            <column name="total_referrals" type="int4"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
